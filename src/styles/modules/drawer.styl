.bin-drawer-wrapper {
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 2000;
  overflow: hidden;
  &.is-right {
    .drawer-box {
      position: fixed;
      top: 0;
      right: 0;
      &.move-enter, &.move-leave-to {
        opacity: 1;
        transform: translateX(100%);
      }
    }
  }
  &.is-left {
    .drawer-box {
      position: fixed;
      top: 0;
      left: 0;
      &.move-enter, &.move-leave-to {
        opacity: 1;
        transform: translateX(-100%);
      }
    }
  }
  &.fade-enter-active, &.fade-leave-active {
    transition: all .4s ease;
  }
  &.fade-enter, &.fade-leave-to {
    opacity: 0;
  }
  .drawer-box {
    width: 100%;
    height: 100%;
    background: #ffffff;
    &.move-enter-active, &.move-leave-active {
      transition: all .4s ease;
    }
    .header {
      border-bottom: 1px solid #e8eaec;
      padding: 14px 16px;
      line-height: 1;
      .title {
        display: inline-block;
        width: 100%;
        height: 22px;
        line-height: 22px;
        font-size: 14px;
        color: #17233d;
        font-weight: 700;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
      }
      .close {
        display: inline-block;
        vertical-align: middle;
        i {
          font-size: 22px;
          margin-left: 0;
          cursor: pointer;
        }
      }
    }
    .body {
      padding: 10px;
      font-size: 14px;
      color: #515a6e;
      line-height: 1.5;
      .bin-scrollbar__wrap {
        overflow-x: hidden;
      }
      h2 {
        line-height: 1.5;
        margin: 0 0 12px 0;
      }
    }
    .footer {
      border-top: 1px solid #f0f0f0;
      padding: 5px;
      text-align: right;
      .bin-button {
        min-width: 80px;
        margin-right: 10px;
      }
    }
  }
}
