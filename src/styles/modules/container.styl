.bin-container {
  box-sizing: border-box;
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
  .bin-container-header, .bin-container-footer {
    box-sizing: border-box;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    padding: 0 20px;
    background-color: #fff;
  }
  .bin-container-header {
    top: 0;
    border-bottom: 1px solid #eee;
  }
  .bin-container-footer {
    bottom: 0;
    border-top: 1px solid #eee;
  }
}
