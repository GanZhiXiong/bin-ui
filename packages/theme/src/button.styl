@import "common/var.styl"
$root = bin

.{$root}-button {
  display: inline-block;
  line-height: 1;
  white-space: nowrap;
  cursor: pointer;
  background: $--button-default-background-color;
  border: $--border-base;
  color: $--color-text-regular
  -webkit-appearance: none;
  text-align: center;
  box-sizing: border-box;
  outline: none;
  margin: 0;
  transition: .3s;
  font-weight: 500;
  -moz-user-select: none;
  -webkit-user-select: none;
  -ms-user-select: none;
  padding: 12px 20px;
  font-size: 14px;
  border-radius: 4px;
  &:focus, &:hover {
    color: $--color-primary;
    border-color: #c6e2ff;
    background-color: #ecf5ff;
  }
  &:active {
    color: #3a8ee6;
    border-color: #3a8ee6;
    outline: none;
  }
  &.is-round {
    border-radius: 20px;
    padding: 12px 23px;
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    color: #c0c4cc;
    cursor: not-allowed;
    background-image: none;
    background-color: #fff;
    border-color: #ebeef5;
  }
}

.{$root}-button--text {
  border-color: transparent;
  color: #409eff;
  background: transparent;
  padding-left: 0;
  padding-right: 0;
  &:focus, &:hover {
    color: #66b1ff;
    border-color: transparent;
    background-color: transparent;
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    cursor: not-allowed;
    background-image: none;
    border-color: transparent;
  }
}
.{$root}-button--medium {
  padding: 10px 20px;
  font-size: 14px;
  border-radius: 4px;
  &.is-round {
    padding: 10px 20px;
  }
}
.{$root}-button--small {
  padding: 9px 15px;
  font-size: 12px;
  border-radius: 3px;
  &.is-round {
    padding: 9px 15px;
  }
}
.{$root}-button--mini {
  padding: 7px 15px;
  font-size: 12px;
  border-radius: 3px;
  &.is-round {
    padding: 7px 15px;
  }
}
.{$root}-button--primary {
  color: $--color-white;
  background-color: $--color-primary;
  border-color: $--color-primary;
  &:focus, &:hover {
    background: #66b1ff;
    border-color: #66b1ff;
    color: #fff;
  }
  &.is-plain {
    color: $--color-primary;
    background: #ecf5ff;
    border-color: #b3d8ff;
    &:focus, &:hover {
      color: #fff;
      background: $--color-primary;
      border-color: $--color-primary;
    }
    &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
      cursor: not-allowed;
      color: #8cc5ff;
      background-color: #ecf5ff;
      border-color: #d9ecff;
    }
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    cursor: not-allowed;
    color: $--color-white;
    background-color: #a0cfff;
    border-color: #a0cfff;
  }
}

.{$root}-button--success {
  color: #fff;
  background-color: $--color-success;
  border-color: $--color-success;
  &:focus, &:hover {
    background: #85ce61;
    border-color: #85ce61;
    color: #fff;
  }
  &.is-plain {
    color: $--color-success;
    background: #f0f9eb;
    border-color: #85ce61;
    &:focus, &:hover {
      color: #fff;
      background: $--color-success;
      border-color: $--color-success;
    }
    &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
      cursor: not-allowed;
      color: #a4da89;
      background-color: #f0f9eb;
      border-color: #e1f3d8;
    }
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    cursor: not-allowed;
    color: $--color-white;
    background-color: #b3e19d;
    border-color: #b3e19d;
  }
}

.{$root}-button--info {
  color: #fff;
  background-color: $--color-info;
  border-color: $--color-info;
  &:focus, &:hover {
    background: #a6a9ad;
    border-color: #a6a9ad;
    color: #fff;
  }
  &.is-plain {
    color: $--color-info;
    background: #f4f4f5;
    border-color: #d3d4d6;
    &:focus, &:hover {
      color: #fff;
      background: $--color-info;
      border-color: $--color-info;
    }
    &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
      cursor: not-allowed;
      color: #bcbec2;
      background-color: #f4f4f5;
      border-color: #e9e9eb;
    }
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    cursor: not-allowed;
    color: $--color-white;
    background-color: #c8c9cc;
    border-color: #c8c9cc;
  }
}

.{$root}-button--warning {
  color: #fff;
  background-color: $--color-warning;
  border-color: $--color-warning;
  &:focus, &:hover {
    background: #ebb563;
    border-color: #ebb563;
    color: #fff;
  }
  &.is-plain {
    color: $--color-warning;
    background: #fdf6ec;
    border-color: #f5dab1;
    &:focus, &:hover {
      color: #fff;
      background: $--color-warning;
      border-color: $--color-warning;
    }
    &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
      cursor: not-allowed;
      color: #f0c78a;
      background-color: #fdf6ec;
      border-color: #faecd8;
    }
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    cursor: not-allowed;
    color: $--color-white;
    background-color: #f3d19e;
    border-color: #f3d19e;
  }
}
.{$root}-button--danger {
  color: #fff;
  background-color: $--color-danger;
  border-color: $--color-danger;
  &:focus, &:hover {
    background: #f78989;
    border-color: #f78989;
    color: #fff;
  }
  &.is-plain {
    color: $--color-danger;
    background: #fef0f0;
    border-color: #fbc4c4;
    &:focus, &:hover {
      color: #fff;
      background: $--color-danger;
      border-color: $--color-danger;
    }
    &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
      cursor: not-allowed;
      color: #f9a7a7;
      background-color: #fef0f0;
      border-color: #fde2e2;
    }
  }
  &.is-disabled, &.is-disabled:focus, &.is-disabled:hover {
    cursor: not-allowed;
    color: $--color-white;
    background-color: #fab6b6;
    border-color: #fab6b6;
  }
}

//  button-group
.{$root}-button-group {
  display: inline-block;
  vertical-align: middle;
  & > .{$root}-button {
    float: left;
    position: relative;
  }
  & > .{$root}-button:first-child {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
  }
  & > .{$root}-button:last-child {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
  }
  & > .{$root}-button:not(:last-child) {
    margin-right: -1px;
  }
  & > .{$root}-button:not(:first-child):not(:last-child) {
    border-radius: 0;
  }
  .{$root}-button--primary:first-child,
  .{$root}-button--info:first-child,
  .{$root}-button--success:first-child,
  .{$root}-button--warning:first-child,
  .{$root}-button--danger:first-child {
    border-right-color: hsla(0, 0%, 100%, .5);
  }
  .{$root}-button--primary:last-child
  .{$root}-button--info:last-child,
  .{$root}-button--success:last-child,
  .{$root}-button--warning:last-child,
  .{$root}-button--danger:last-child {
    border-left-color: hsla(0, 0%, 100%, .5);
  }
  .{$root}-button--primary:not(:first-child):not(:last-child),
  .{$root}-button--info:not(:first-child):not(:last-child),
  .{$root}-button--success:not(:first-child):not(:last-child),
  .{$root}-button--warning:not(:first-child):not(:last-child),
  .{$root}-button--danger:not(:first-child):not(:last-child) {
    border-left-color: hsla(0, 0%, 100%, .5);
    border-right-color: hsla(0, 0%, 100%, .5);
  }
}


